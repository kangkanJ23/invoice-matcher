# Copy this file to .env and fill in your real values before running the backend.

# App settings
APP_NAME="Invoice Matcher"
ENV="development"

# OpenAI (or other LLM provider)
# If empty, LLM features will be disabled and the backend will run in OCR-only mode.
OPENAI_API_KEY=

# Choose model (optional)
OPENAI_MODEL=gpt-4

# Database
# For MVP we use SQLite. For production use PostgreSQL.
DATABASE_URL=sqlite:///./invoice_matcher.db

# Storage settings
# Options: local or s3
STORAGE_TYPE=local
UPLOAD_DIR=./uploads

# If using S3 storage (later)
S3_BUCKET=
S3_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Logging
LOG_LEVEL=INFO

# Upload limits
MAX_UPLOAD_SIZE_MB=25
